{% import "macros/tables.twig" as table %}

{% extends "layout.twig" %}

{% block title %}Communauté{% endblock %}

{% block content %}
    <h2>Liste des utilisateurs</h2>

    {% if users %}
        {{ table.start }}
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Rôle</th>
                    <th>Inscrit(e) le</th>
                    <th>Contributions</th>
                    {% if canEdit %}<th></th>{% endif %}
                </tr>
            </thead>

            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td class="{{ user.color }}">{{ user.role }}</td>
                    <td>{{ user.createdAt }}</td>
                    <td>{{ user.nbThemes }} thèmes<br>{{ user.nbExpressions }} expressions</td>

                    {% if canEdit %}
                    <td>
                        {{ table.edit("users", user.id) }}
                        {{ table.delete("users", user.id) }}
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        {{ table.end }}
    {% else %}
        <p>Aucun utilisateur n'est enregistré.</p>
    {% endif %}
{% endblock %}