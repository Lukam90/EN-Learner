{% extends "layout.twig" %}

{% block content %}
    {% include "partials/delete.twig" %}

    <form action="{{ root }}/users/delete/{{ id }}" id="delete-form" method="post">
        <h2>Voulez-vous supprimer cet utilisateur ?</h2>

        <h3>Pseudo : <span class="blue">{{ username }}</span></h3>

        <h3><span class="green">{{ nbThemes }}</span> thème{% if nbThemes > 1 %}s{% endif %}</h3>

        <h3><span class="green">{{ nbExpressions }}</span> expression{% if nbExpressions > 1 %}s{% endif %}</h3>

        <h3 class="error">
            <i class="fa fa-warning m-right"></i>
            La suppression de cet utilisateur entraîne la suppression de tous ses thèmes et expressions.
        </h3>

        <input type="hidden" name="token" value="{{ session.token }}">

        <button class="btn-danger m-bottom" id="open-btn">Confirmer</button>
    </form>

    <hr>

    <a href="{{ root }}/users">&lt; Retour à la liste</a>
{% endblock %}

{% block scripts %}
<script src="{{ public }}/js/delete.js"></script>
{% endblock %}