{% import "macros/forms.twig" as forms %}

{% extends "layout.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <h2>Inscription</h2>

    {% if not loggedIn %}
        {{ forms.start("register") }}
            {{ forms.text("username", username, "Pseudo") }}

            {{ forms.info(tips.username) }}

            {{ forms.error(errors.username) }}

            {# Adresse e-mail #}

            {{ forms.email(email, "Adresse e-mail") }}

            {{ forms.info(tips.email) }}

            {{ forms.error(errors.email) }}

            {# Mot de passe #}

            {{ forms.password("password", password, "Mot de passe") }}

            {{ forms.info(tips.password) }}

            {{ forms.error(errors.password) }}

            {# Confirmation du mot de passe #}

            {{ forms.password("confirm", confirm, "Confirmer le mot de passe") }}

            {{ forms.error(errors.confirm) }}

            {# Bouton #}

            {{ forms.submit("S'inscrire") }}
        {{ form.end }}
    {% else %}
        <p>Vous êtes déjà inscrit(e).</p>
    {% endif %}
{% endblock %}