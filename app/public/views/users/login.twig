{% extends "layout.twig" %}
    
{% block content %}
    <h2>{{ pageTitle }}</h2>

    <form action="{{ root }}/users/login" class="third" method="post">
        {# Adresse e-mail #}

        <label for="email">Adresse e-mail</label>
        <input type="text" name="email" id="email" value="{{ email }}" class="input">

        {# Mot de passe #}

        <label for="password">Mot de passe</label>
        <input type="password" name="password" id="password" value="{{ password }}" class="input">

        {# Message d'erreur #}

        <p class="error">{{ errors.login }}</p>

        {# Jeton CSRF #}

        <input type="hidden" name="token" value="{{ token }}">

        {# Bouton #}

        <button class="btn-info m-bottom">Se connecter</button>

        {# Lien d'inscription #}

        <p>
            <a href="{{ root }}/users/register">Pas encore inscrit(e) ?</a>
        </p>

        {#
        <p>
            <a href="{{ root }}/users/reset">Mot de passe oubli√© ?</a>
        </p>
        #}
    </form>
{% endblock %}