{% set field = "w3-input w3-border w3-margin-bottom" %}

{% extends "layout.twig" %}

{% block title %}Connexion{% endblock %}
    
{% block content %}
    <h2>Connexion</h2>

    {% if 1 %}
        <form action="{{ root }}/users/login" class="w3-container w3-third" method="post">
            {# Adresse e-mail #}

            <label for="email">Adresse e-mail</label>
            <input type="text" name="email" id="email" value="{{ email }}" class="{{ field }}">

            {# Mot de passe #}

            <label for="password">Mot de passe</label>
            <input type="password" name="password" id="password" value="{{ password }}" class="{{ field }}">

            {# Message d'erreur #}

            <p class="w3-text-red">{{ errors.login }}</p>

            {# Jeton CSRF #}

            <input type="hidden" name="token" value="{{ token }}">

            {# Bouton #}

            <button class="w3-btn w3-margin-bottom w3-blue">Se connecter</button>

            {# Lien d'inscription #}

            <p>
                <a href="{{ root }}/users/register">Pas encore inscrit(e) ?</a>
            </p>

            {#
            <p>
                <a href="{{ root }}/users/reset">Mot de passe oublié ?</a>
            </p>
            #}
        </form>
    {% else %}
        <p>Vous êtes déjà connecté(e).</p>

        <p>Veuillez revenir sur la <a href="{{ root }}">page d'accueil</a>.</p>
    {% endif %}
{% endblock %}