{% extends "layout.twig" %}

{% block content %}
    <h2>Suppression de l'expression : {{ title }}</h2>

    {% if 1 %}
        <form action="{{ root }}/expressions/delete/1" class="w3-container" method="post">
            <h3>Voulez-vous supprimer cette expression ?</h3>

            <input type="hidden" name="token" value="{{ token }}">

            <button class="w3-btn w3-margin-bottom w3-red">Confirmer</button>
        </form>
    {% else %}
        <p>Vous n'êtes pas autorisé(e) à supprimer cette expression.</p>

        <p>Veuillez revenir sur la <a class="w3-text-blue" href="{{ root }}">page d'accueil</a>.</p>
    {% endif %}
{% endblock %}