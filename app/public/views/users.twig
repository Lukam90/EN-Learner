{% extends "layout.twig" %}

{% block content %}
    <h2>{{ pageTitle }}</h2>

    {% if users %}
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Pseudo</th>
                        <th>Rôle</th>
                        <th>Inscrit(e) le</th>
                        <th>Contributions</th>
                        {% if superuser %}
                        <th></th>
                        {% endif %}
                    </tr>
                </thead>

                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td class="{{ user.color }}">{{ user.role }}</td>
                        <td>{{ user.createdAt }}</td>
                        <td>
                            {{ user.nbThemes }} thème{% if user.nbThemes > 1 %}s{% endif %}<br>
                            {{ user.nbExpressions }} expression{% if user.nbExpressions > 1 %}s{% endif %}
                        </td>

                        {% if session.user_id %}
                        <td>
                            <a href="{{ root }}/users/edit/{{ user.id }}">
                                <button class="btn-success m-right">
                                    <i class="fa fa-pencil"></i>
                                </button>
                            </a>

                            <a href="{{ root }}/users/delete/{{ user.id }}">
                                <button class="btn-danger">
                                    <i class="fa fa-close"></i>
                                </button>
                            </a>
                        </td>
                        {% endif %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p>Aucun utilisateur n'est enregistré.</p>
    {% endif %}
{% endblock %}