{% import "macros/tables.twig" as tables %}

{% extends "layout.twig" %}

{% block title %}Listes{% endblock %}

{% block content %}
    <h2>La liste des thèmes</h2>

    {% if can-add %}
        <button class="w3-btn w3-green w3-margin-bottom">
            <a href="{{ root }}/themes/new">
                <i class="fa fa-plus"></i> Ajouter un thème
            </a>
        </button>
    {% endif %}

    {% if themes %}
        {{ tables.start }}
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Auteur</th>
                    <th>Nb Expressions</th>
                    {% if canAdd %}
                    <th></th>
                    {% endif %}
                </tr>
            </thead>

            <tbody>
                {% for theme in themes %}
                <tr>
                    <td>
                        <a class="w3-text-blue" href="{{ root }}/themes/show/{{ theme.id }}">{{ theme.title }}</a>
                    </td>
                    <td>{{ theme.author }}</td>
                    <td>{{ theme.nbExpressions }}</td>

                    {% if canEdit %}
                    <td>
                        <button class="w3-btn w3-blue w3-margin-right">
                            <a href="{{ root }}/themes/edit/{{ theme.id }}">
                                <i class="fa fa-pencil"></i> Editer
                            </a>
                        </button>

                        <button class="w3-btn w3-red">
                            <a href="{{ root }}/themes/delete/{{ theme.id }}">
                                <i class="fa fa-trash"></i> Supprimer
                            </a>
                        </button>
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        {{ tables.end }}
    {% else %}
        <p>Aucun thème n'est enregistré.</p>
    {% endif %}
{% endblock %}