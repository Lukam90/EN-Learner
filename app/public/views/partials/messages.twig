{% set container = "w3-panel w3-display-container w3-border" %}
{% set top = "w3-button w3-large w3-display-topright" %}
{% set close = "this.parentElement.style.display='none';" %}

{# Success Messages #}

{% if session.success %}
    <div class="{{ container }} w3-pale-blue">
        <span class="{{ top }}" onclick="{{ close }}">&times;</span>
        
        <p>{{ session.success }}</p>
    </div>
{% endif %}

{# Error Messages #}

{% if session.alert %}
    <div class="{{ container }} w3-pale-red">
        <span class="{{ top }}" onclick="{{ close }}">&times;</span>
        
        <p>{{ session.alert }}</p>
    </div>
{% endif %}