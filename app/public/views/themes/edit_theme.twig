{% extends "layout.twig" %}

{% block title %}Edition du thème : {{ title }}{% endblock %}

{% block content %}
    <h2>Edition du thème : {{ title }}</h2>

    {% if 0 %}
        <form action="{{ root }}/themes/edit/1" class="w3-container w3-third" method="post">
            <label for="title">Titre</label>
            <input type="text" name="title" id="title" value="{{ title }}" class="w3-input w3-border w3-margin-bottom">

            <p class="w3-text-blue">{{ tips.title }}</p>

            <p class="w3-text-red">{{ errors.title }}</p>

            <input type="hidden" name="token" value="{{ token }}">

            <button class="w3-btn w3-blue">Editer</button>
        </form>
    {% else %}
        <p>Vous n'êtes pas autorisé(e) à éditer ce thème.</p>

        <p>Veuillez revenir à la <a class="w3-text-blue" href="{{ root }}/themes">liste des thèmes</a>.</p>
    {% endif %}
{% endblock %}