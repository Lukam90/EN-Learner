{% extends "layout.twig" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h2>{{ title }}</h2>

    {% if 1 %}
        <button class="w3-btn w3-margin-bottom w3-blue" onclick="openModal('newExpression')">
            <i class="fa fa-plus"></i> Ajouter une expression
        </button>

        {% include "expressions/new_expression.twig" %}
        {% include "expressions/edit_expression.twig" %}
        {% include "expressions/delete_expression.twig" %}
    {% endif %}

    {% if expressions %}
        <table class="w3-table w3-striped w3-hoverable">
            <thead>
                <tr>
                    <th>Mot</th>
                    <th>Traduction</th>
                    <th>Prononciation</th>
                    <th>Auteur</th>
                    {% if 1 %}
                    <th></th>
                    {% endif %}
                </tr>
            </thead>

            <tbody>
                {% for expression in expressions %}
                <tr>
                    <td>{{ expression.french }}</td>
                    <td>{{ expression.english }}</td>
                    <td>{{ expression.phonetics }}</td>
                    <td>{{ expression.author }}</td>

                    {% if 1 %}
                    <td>
                        <button class="w3-btn w3-margin-right w3-green" onclick="openModal('editExpression')">
                            <i class="fa fa-pencil"></i> Editer
                        </button>

                        <button class="w3-btn w3-red" onclick="openModal('deleteExpression')">
                            <i class="fa fa-pencil"></i> Supprimer
                        </button>
                    </td>
                    {% endif %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucune expression n'est enregistrée pour ce thème.</p>
    {% endif %}
{% endblock %}