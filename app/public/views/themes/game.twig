{% extends "layout.twig" %}

{% block title %}
    {{ pageTitle }}
{% endblock %}

{% block content %}
    <p>
        <a href="{{ root }}/themes/show/{{ id }}">&lt; Retour à la liste</a>
    </p>

    <hr>

    <h2>{{ pageTitle }}</h2>

    {% if not started %}
        <form action="{{ root }}/themes/start/{{ id }}" method="post">
            <div class="third">
                <p>Niveau de difficulté</p>

                <select class="input" name="level">
                    {% for level in levels %}
                    <option value="{{ level }}">{{ level }}</option>
                    {% endfor %}
                </select>

                <button class="btn-success">Let's go !</button>
            </div>
        </form>
    {% else %}
        {% set index = 0 %}

        {% for flashcard in flashcards %}
            {% set index = index + 1 %}

            <div class="flashcard" id="card{{ index }}" onclick="showAnswer({{ index }});">
                {# <div class="w3-display-container close" onclick="closeCard(this);"> #}
                <div class="close" onclick="closeCard(this);">
                    <div class="w3-button w3-large w3-display-topright">&times;</div>
                </div>

                <div class="center">
                    <h2>{{ flashcard.french }}</h2>
                </div>

                <div class="answers">
                    <div class="center">
                        <h2>{{ flashcard.english }}</h2>
                    </div>
                    
                    <div class="center">
                        <h3><em>{{ flashcard.phonetics }}</em></h3>
                    </div>
                </div>
            </div>
            
        {% endfor %}

        <div class="container" id="restart">
            <a href="{{ root }}/themes/start/{{ id }}">
                <button class="btn-success m-vertical">Rejouer ?</button>
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block scripts %}
<script src="{{ public }}/js/game.js"></script>
{% endblock %}